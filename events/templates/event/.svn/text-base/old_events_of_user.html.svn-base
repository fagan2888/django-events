{% load event_tags %}
 <h1>Vergangene Veranstaltungen</h1>
 <div>
     {% if old_events %}
         <div class="clearfix">
             {% for event in old_events %}
                    {% if in_profile %}
                        {% event_profile_preview event user %}
                    {% else %}
                        {% event_small_preview event user %}
                    {% endif %}
             {% endfor %}
         </div>
     {% else %}
         <p>Keine Veranstaltungen gefunden.</p>
     {% endif %}
 </div>