<div class="event-preview span-15">
    {% if event.image %}
        <div class="span-3">
            <img src="{% event.eventimage.get_thumbnail_url %}" alt="{{ event.title }}" />
        </div>
    {% endif %}
    <div class="span-6">
        <div class="wrapper">
            <h2>{{event.title}}</h2>
            <span class="subtitle">
                {% if event.is_single_day %}
                    <b>Am:</b> {{event.start_date|date}}, {{event.start_date|time}}
                {% else %}
                    <b>Von:</b> {{event.start_date|date}}, {{event.start_date|time}} -
                    <b>Bis:</b> {{event.end_date|date}}, {{event.end_date|time}}
                {% endif %}
            </span>
            <p>
                {{event.body}}
                <a href="{{ event.get_absolute_url }}">Weiterlesen</a>
            </p>
            <span>Von {{event.author}}</span>
        </div>
    </div>
</div>
